import javax.swing.JOptionPane;

public class testaAutomovel {

	public static void main(String[] args) {
		automovel auto1 = new automovel();
		
		auto1.modelo =Integer.parseInt(JOptionPane.showInputDialog("Digite o modelo:"));
		auto1.cor = JOptionPane.showInputDialog("Digite a cor:");
		auto1.combustivel = Integer.parseInt(JOptionPane.showInputDialog("Digite o combustível:"));
		
		auto1.combus();
		JOptionPane.showMessageDialog(null,"Modelo:"+auto1.model()+"\tCor:"+auto1.cor()+"\tCombustível:"+auto1.tipocombus());
		
		

	}

}
