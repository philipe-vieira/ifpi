import javax.swing.JOptionPane;

public class Conta {
	int num;
	String nome;
	int tipoconta;
	double saldo;
	
	void entrada(){
		num = Integer.parseInt(JOptionPane.showInputDialog("Digite o número da conta:"));
		nome = JOptionPane.showInputDialog("Digite o nome do titula da conta");
		tipoconta = Integer.parseInt(JOptionPane.showInputDialog("Digite o tipo da conta[1-Poupança;2-Conta Corrente]:"));
		saldo = Double.parseDouble(JOptionPane.showInputDialog("Digite o saldo da conta:"));
	}
	
	double depositar(){
		double valor = Double.parseDouble(JOptionPane.showInputDialog("Digite o valor à depositar:"));
		this.saldo+=valor;
		JOptionPane.showMessageDialog(null,"Depósito realizado com sucesso!");
		imprimir();
		return saldo;
	}
	
	double sacar(){
		double valor = Double.parseDouble(JOptionPane.showInputDialog("Digite o valor à depositar:"));
		if(saldo-valor<0)
			JOptionPane.showMessageDialog(null,"Não é possivel realizar a operação. Saldo ficará negativado!");
		else{
			this.saldo-=valor;
			JOptionPane.showMessageDialog(null,"Saque realizado com sucesso!");
		}
		imprimir();
		return saldo;
	}
	
	double consulta(){
		return saldo;
	}
	
	void imprimir(){
		String nomec="";
		if(tipoconta==1)
			nomec="Poupança";
		else
			if(tipoconta==2)
				nomec="Conta corrente";
		
		JOptionPane.showMessageDialog(null,"Número da conta:"+num+"\nNome do titular:"+nome+"\nTipo da conta:"+nomec+"\nSaldo:R$"+saldo);
	}
	
	void menu(){
		int resp=Integer.parseInt(JOptionPane.showInputDialog("MENU:\n1-Realizar depósito\n2-Realizar saque\n3-Mostrar saldo\n4-Mostrar informações do titular"));
		switch (resp){
			case 1:
				depositar();
				break;
			case 2:
				sacar();
				break;
			case 3:
				JOptionPane.showMessageDialog(null,"Seu saldo é:R$"+consulta());
				break;
			case 4:
				imprimir();
				break;
			default:
				JOptionPane.showMessageDialog(null,"Opção inválida!");
				break;
		}
	}
	
	
}
