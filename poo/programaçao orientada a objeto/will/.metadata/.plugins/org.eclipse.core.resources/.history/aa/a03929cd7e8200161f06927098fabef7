import javax.swing.JOptionPane;

public class testaAutomovel {

	public static void main(String[] args) {
		automovel auto1 = new automovel();
		
		auto1.modelo =Integer.parseInt(JOptionPane.showInputDialog("Digite o modelo:"));
		auto1.cor = JOptionPane.showInputDialog("Digite a cor:");
		auto1.combustivel = Integer.parseInt(JOptionPane.showInputDialog("Digite o combustível[1-Gasolina;2-Álcool;3-Diesel;4-Gás]:"));
		
		auto1.imprimir();
		//JOptionPane.showMessageDialog(null,"Preço:R$"+auto1.combus()+"\nModelo:"+auto1.model()+"\nCor:"+auto1.cor()+"\nCombustível:"+auto1.tipocombus());
		
		

	}

}
